@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "LayoutWithBreadcrumb.cshtml";

    var contactForm = new Crito.Models.ContactForm();
}

 <section class="contact-cards">
      <div class="contact-card">
        <i class="fa fa-map-marker" aria-hidden="true"></i>
        <h4>Visit us</h4>
        <address><p>@Model.Value("contactInformationStreetName") <br> @Model.Value("contactInformationPostalCode") <br> @Model.Value("contactInformationCity")</p></address>
      </div>
      <div class="contact-card">
        <i class="fa fa-phone" aria-hidden="true"></i>
        <h4>Call us</h4>
        <p>@Model.Value("contactInformationPhone1") <br> @Model.Value("contactInformationPhone2")</p>
      </div>
      <div class="contact-card">
        <i class="fa fa-envelope" aria-hidden="true"></i>
        <h4>Email us</h4>
        <p>@Model.Value("contactInformationEmail1") @Model.Value("contactInformationEmail2") </p>
      </div>
 </section>
    
    
    <div class="message-form">
        <h2 class="heading"> Leave us a message</h2>
        @using(Html.BeginUmbracoForm("Index", "Contact", FormMethod.Post)) {

 
        <div asp-validation-summary="All"></div>
            
            <label for="name" ></label>
            <input asp-for="@contactForm.Name"type="text" class="form-control" id="name" placeholder="Your Name*"/>
            
            <label for="email"></label>
            <input asp-for="@contactForm.Email" type="email" class="form-control" id="email" placeholder="Email*" />
            
            <label for="message"></label>
            <div>
                <textarea asp-for="@contactForm.Message" type="text" placeholder="Write your message here" class="form-control" id="message" rows="5"></textarea>
            </div>

            <div>
                <button type="submit" class="btn btn-features">Send</button>
            </div>
        }
    </div>
    @await Html.PartialAsync("_Map")
    